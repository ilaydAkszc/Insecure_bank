@model Insecure_Bank.Models.Model.Transaction
@{
    ViewData["Title"] = "İşlem Detayları";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>🧾 İşlem Detayları</h2>
    <div>
        <a href="@Url.Action("Transactions", "Banking")" class="btn btn-outline-secondary">İşlemlere dön</a>
        <a href="@Url.Action("Transfer", "Banking")" class="btn btn-success">Yeni Transfer</a>
    </div>
</div>

<div class="card">
    <div class="card-header bg-info text-white">
        <h3>
            <i class="bi bi-receipt"></i>
            Transaction #@Model.TrId
        </h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <h5>İşlem Bilgileri</h5>
                <table class="table table-borderless">
                    <tr>
                        <td><strong>İşlem ID:</strong></td>
                        <td>@Model.TrId</td>
                    </tr>
                    <tr>
                        <td><strong>Tarih & Saat:</strong></td>
                        <td>@Model.TransactionDate.ToString("MMM dd, yyyy HH:mm:ss")</td>
                    </tr>
                    <tr>
                        <td><strong>İşlem Tipi:</strong></td>
                        <td><span class="badge bg-info">@Model.TransactionType</span></td>
                    </tr>
                    <tr>
                        <td><strong>Miktar:</strong></td>
                        <td><span class="text-success h4">$@Model.Amount.ToString("N2")</span></td>
                    </tr>
                    <tr>
                        <td><strong>Açıklama:</strong></td>
                        <td>@(string.IsNullOrEmpty(Model.Description) ? "No description provided" : Model.Description)</td>
                    </tr>
                </table>
            </div>

            <div class="col-md-6">
                <h5>Hesap bilgileri</h5>
                <div class="card mb-3">
                    <div class="card-header bg-secondary text-white">
                        <h6 class="mb-0">Gönderen</h6>
                    </div>
                    <div class="card-body">
                        <p><strong>Hesap Numarası:</strong> @Model.FromAccount.AccountNumber</p>
                        <p><strong>Hesap Tipi:</strong> @Model.FromAccount.AccountType</p>
                        <p><strong>Sahibi:</strong> @Model.FromAccount.User.Username</p>
                        <p><strong>Bakiye:</strong> $@Model.FromAccount.Balance.ToString("N2")</p>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h6 class="mb-0">Alıcı</h6>
                    </div>
                    <div class="card-body">
                        <!-- DOĞRU KOD: -->
                        <p><strong>Hesap Numarası:</strong> @Model.ToAccount.AccountNumber</p>
                        <p><strong>Hesap Tipi:</strong> @Model.ToAccount.AccountType</p>
                        <p><strong>Sahibi:</strong> @Model.ToAccount.User.Username</p>
                        <p><strong>Bakiye:</strong> $@Model.ToAccount.Balance.ToString("N2")</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-12">
                <h5>Ek Bilgiler</h5>
                <div class="alert alert-light">
                    <div class="row">
                        <div class="col-md-4">
                            <strong>Initiated by User ID:</strong> @Model.UserId
                        </div>
                        <div class="col-md-4">
                            <strong>From Account ID:</strong> @Model.FromAccountId
                        </div>
                        <div class="col-md-4">
                            <strong>To Account ID:</strong> @Model.ToAccountId
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="alert alert-danger mt-3">
    <h6>🔓 IDOR Security Vulnerability Detected!</h6>
    <div class="row">
        <div class="col-md-6">
            <p class="mb-1"><strong>Security Issue:</strong> Unauthorized access to transaction data</p>
            <small>
                <strong>Current Session User:</strong> @Context.Session.GetString("Username") (ID: @Context.Session.GetInt32("UserId"))<br>
                <strong>Transaction Owner:</strong> User ID @Model.UserId<br>
                @if (Context.Session.GetInt32("UserId") != Model.UserId)
                {
                    <span class="text-danger fw-bold">⚠️ You are viewing someone else's transaction!</span>
                }
                else
                {
                    <span class="text-success">✓ This is your transaction</span>
                }
            </small>
        </div>
        <div class="col-md-6">
            <small>
                <strong>What an attacker can see:</strong><br>
                • Full transaction details<br>
                • Account numbers and balances<br>
                • Account holder names<br>
                • Transaction patterns<br>
                • Financial relationships
            </small>
        </div>
    </div>
</div>

<div class="alert alert-info mt-3">
    <h6>🔍 IDOR Testing Tips:</h6>
    <small>
        <strong>Try these URLs to test IDOR:</strong><br>
        • <code>/Banking/TransactionDetails/1</code> - View transaction #1<br>
        • <code>/Banking/TransactionDetails/2</code> - View transaction #2<br>
        • <code>/Banking/AccountDetails/1</code> - View account #1<br>
        • <code>/Banking/AccountDetails/2</code> - View account #2<br>
        <br>
        <strong>Expected behavior:</strong> You should only see your own data<br>
        <strong>Current behavior:</strong> You can see anyone's data by changing IDs
    </small>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}